{
  "manifest_version": 3,
  "name": "Impulse Blocker",
  "version": "1.0",
  "description": "Blocks purchase pages until you convince the chatbot to let you buy.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.ebay.com/*",
    "*://*.etsy.com/*",
    "*://*.walmart.com/*",
    "*://*.target.com/*",
    "*://*.bestbuy.com/*",
    "*://*.aliexpress.com/*",
    "*://*.alibaba.com/*",
    "*://*.wish.com/*",
    "*://*.shopify.com/*",
    "*://checkout.shopify.com/*"
  ],
  "action": {
    "default_popup": "stats.html",
    "default_title": "Impulse Guard Stats"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.ca/*",
        "*://*.ebay.com/*",
        "*://*.etsy.com/*",
        "*://*.walmart.com/*",
        "*://*.target.com/*",
        "*://*.bestbuy.com/*",
        "*://*.aliexpress.com/*",
        "*://*.alibaba.com/*",
        "*://*.wish.com/*",
        "*://*.shopify.com/*",
        "*://checkout.shopify.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.html",
        "config.js",
        "fonts.css",
        "styles.css",
        "styles-new.css",
        "overlay-final.js",
        "animations/AnimationService.js",
        "animations/pokemon-animations.js",
        "animations/TextAnimation.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
