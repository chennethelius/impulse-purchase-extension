{
  "manifest_version": 3,
  "name": "Impulse Blocker",
  "version": "1.0",
  "description": "Blocks purchase pages until you convince the chatbot to let you buy.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.ebay.com/*",
    "*://*.etsy.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Impulse Blocker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.ebay.com/*", "*://*.etsy.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup-auth.js",
        "popup-styles.css",
        "overlay.html",
        "config.js",
        "fonts.css",
        "styles.css",
        "overlay.js",
        "overlay-auth.js",
        "firebase-config.js",
        "firebase-auth.js",
        "firebase-service.js",
        "animations/AnimationService.js",
        "animations/pokemon-animations.js",
        "animations/TextAnimation.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
